<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_margin="12dp"
    app:cardBackgroundColor="#8A1E70"
    app:cardCornerRadius="35dp"
    android:padding="4dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/idImageUser"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:src="@drawable/outline_cinematic_blur_24"/>

        <TextView
            android:id="@+id/MedicalRecordId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Id de historial Medico"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_toEndOf="@id/idImageUser"
            android:layout_alignParentTop="true"/>

        <TextView
            android:id="@+id/idPatient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IdPaciente"
            android:layout_marginTop="15dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_toEndOf="@id/idImageUser"
            android:layout_below="@id/MedicalRecordId"/>

        <TextView
            android:id="@+id/dateMedicalRecord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha del historial Medico"
            android:layout_marginTop="5dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_toEndOf="@id/idImageUser"
            android:layout_below="@id/idPatient"/>

        <TextView
        android:id="@+id/symptomsMedicalRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sintomas del paciente"
        android:layout_marginTop="5dp"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_toEndOf="@id/idImageUser"
        android:layout_below="@id/dateMedicalRecord"/>

        <TextView
            android:id="@+id/diagnosisMedicalRecord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diagnostico del paciente"
            android:layout_marginTop="5dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_toEndOf="@id/idImageUser"
            android:layout_below="@id/symptomsMedicalRecord"/>

        <TextView
            android:id="@+id/notesMedicalRecord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notas del paciente"
            android:layout_marginTop="5dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_toEndOf="@id/idImageUser"
            android:layout_below="@id/diagnosisMedicalRecord"/>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonUpdateMR"
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:text="Actualizar"
            android:layout_below="@id/notesMedicalRecord"
            android:layout_toEndOf="@id/idImageUser"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="10dp"
            android:textColor="#8A1E70"
            android:backgroundTint="@color/white"
            />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonDeleteMR"
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:text="Eliminar"
            android:layout_below="@id/notesMedicalRecord"
            android:layout_toEndOf="@id/buttonUpdateMR"
            android:layout_marginTop="30dp"
            android:textColor="#8A1E70"
            android:backgroundTint="@color/white"/>

    </RelativeLayout>

    </androidx.cardview.widget.CardView>